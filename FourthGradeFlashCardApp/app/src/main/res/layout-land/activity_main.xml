<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtDivOpr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="51dp"
        android:text="3"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtDivend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="50sp"
        android:layout_alignBaseline="@+id/txtDivOpr"
        android:layout_alignBottom="@+id/txtDivOpr"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtDivsor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDivend"
        android:layout_alignBottom="@+id/txtDivend"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="89dp"
        android:text="2"
        android:textSize="50sp" />

    <Button
        android:id="@+id/btnGenPbms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate 10 Random problems"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtDivOpr"
        android:layout_below="@+id/btnGenPbms"
        android:layout_marginTop="36dp"
        android:text="Your Answer" />

    <EditText
        android:id="@+id/edtAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/btnGenPbms"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Your Answer" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtAns"
        android:layout_centerHorizontal="true"
        android:text="SUBMIT" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSub"
        android:layout_alignStart="@+id/txtDivsor" />

    <TextView
        android:id="@+id/correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginEnd="27dp" />

</RelativeLayout>